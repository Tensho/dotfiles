alias zshconfig='subl ~/.zshrc'
alias brewconfig='subl ~/Brewfile'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias dir-size='du -sh'

alias lsof-connections='lsof -i | grep -E "(LISTEN|ESTABLISHED)"'
alias stat-mod-hex='stat -f %Mp%Lp '

alias brew-list='brew ls --full-name --versions'
# Used function instead of alias to not fight with '' and "" escaping.
# Used optional keyword "function" because of dashed name.
function brew-deps {
  brew list | while read cask; do echo -n "\e[1;34m$cask ->\e[0m"; brew deps $cask | awk '{printf(" %s ", $0)}'; echo ""; done
}

alias be='bundle exec'

alias git=hub

alias archive='tar -cvzf' # tmp/emails.tar.gz tmp/emails/*
alias unarchive='tar -xvf'  # tmp/emails.tar.gz tmp/

alias gpg-im-encrypt='gpg --armor --recipient' # Ctrl + D
alias gpg-im-decrypt='gpg --decrypt'           # Ctrl + D
alias gpg-export-key='gpg --armor --export'    # andrew.babichev@gmail.com

alias dc='docker-compose'
alias docker-containers='docker ps -a -q'
alias docker-ps='docker ps --format "table {{.ID}}\t{{.Image}}\t{{.Size}}\t{{.Ports}}"'
alias docker-host='screen ~/Library/Containers/com.docker.docker/Data/com.docker.driver.amd64-linux/tty'

alias mysql-show-table='mysqlshow -uroot' # mysqlshow -uroot resolverapp_development users

get-aws-key-pair-fingerprint() {
  openssl pkcs8 -in $1 -inform PEM -outform DER -topk8 -nocrypt | openssl sha1 -c
}

alias get-aws-key-pair-pubkey='ssh-keygen -y -f'

alias tf='terraform'
alias tg='terragrunt'

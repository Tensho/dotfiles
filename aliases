# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

alias dir-size='du -sh'

alias brew-list='brew ls --full-name --versions'
# Used function instead of alias to not fight with '' and "" escaping.
# Used optional keyword "function" because of dashed name.
function brew-deps {
  brew list | while read cask; do echo -n "\e[1;34m$cask ->\e[0m"; brew deps $cask | awk '{printf(" %s ", $0)}'; echo ""; done
}

alias be='bundle exec'

alias git=hub

alias archive='tar -cvzf' # tmp/emails.tar.gz tmp/emails/*
alias unarchive='tar -xvf'  # tmp/emails.tar.gz tmp/

alias gpg-im-encrypt='gpg --armor --recipient' # Ctrl + D
alias gpg-im-decrypt='gpg --decrypt'           # Ctrl + D

alias dc='docker-compose'
alias docker-dangling-images='docker images -f "dangling=true" -q'
# docker rmi $(docker-dangling-images)
alias docker-containers='docker ps -a -q'
# docker stop $(docker-containers)
# docker rm $(docker-containers)
alias docker-ps='docker ps --format "table {{.ID}}\t{{.Image}}\t{{.Size}}\t{{.Ports}}"'

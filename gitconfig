[user]
  name = Andrew Babichev
  email = andrew.babichev@gmail.com
[alias]
  fa = fetch -p --all
  st = status -sb
  co = checkout
  br = branch
  lg = log --oneline --decorate --graph
  orphans = fsck --full
  df = diff --word-diff
  r = reset
  r1 = reset HEAD^
  cp = cherry-pick
  cl = clone
  ci = commit --allow-empty
  rb = rebase -i --keep-empty
[push]
  default = current
[rebase]
  autosquash = true
  autostash = true
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
[color]
  ui = true

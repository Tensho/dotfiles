[user]
  name = Andrew Babichev
  email = andrew.babichev@gmail.com
[alias]
  fa = fetch --prune --all --tags
  st = status --short --branch
  sh = stash --keep-index --include-untracked
  co = checkout
  br = branch
  lg = log --oneline --decorate --graph --all
  lg-pro = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  orphans = fsck --full
  df = diff --word-diff
  r = reset
  r1 = reset HEAD^
  cp = cherry-pick -x --sign-of
  cl = clone
  ci = commit --allow-empty
  fx = commit --fixup
  rb = rebase
  rbi = rebase -i --keep-empty
[push]
  default = current
[rebase]
  autosquash = true
  autostash = true
[help]
	autocorrect = 1
[branch]
	autosetuprebase = always
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
[color]
  ui = true
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[diff]
  tool = araxis
[merge]
  tool = araxis
[commit]
	gpgsign = true

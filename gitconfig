[user]
  name = Andrew Babichev
  email = andrew.babichev@gmail.com
  signingkey = Andrew Babichev <andrew.babichev@gmail.com>
[alias]
  fa = fetch --prune --all --tags
  st = status --short --branch
  sh = stash --keep-index --include-untracked
  co = checkout
  br = branch
  lg = log --oneline --decorate --graph --all
  lg-pro = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
  orphans = fsck --full
  df = diff --word-diff --color-words
  r = reset
  r1 = reset HEAD^
  cp = cherry-pick -x --sign-of
  cl = clone
  ci = commit --allow-empty
  fx = commit --fixup
  rb = rebase
  rbi = rebase -i --keep-empty
[rebase]
  autosquash = true
  autostash = true
[help]
  autocorrect = 1
[branch]
  autosetupmerge = always
  autosetuprebase = always
[credential]
  helper = osxkeychain
[core]
  excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[color]
  ui = true
[commit]
  gpgsign = false
[push]
  default = current
[interactive]
	diffFilter = diff-so-fancy --patch
[init]
	defaultBranch = main
